name:                jdbt
version:             0.1.0
synopsis:            DB helper
license:             GPL-3
author:              ClÃ©ment Delafargue
maintainer:          clement@delafargue.name
build-type:          Simple
cabal-version:       >=1.6
extra-source-files:  README.md CONTRIBUTING.md CHANGELOG.md
data-files:   data/index.html

flag Api
    description: Build an API frontend
    default: False


Executable jdbt
  Ghc-Options:    -Wall
  main-is:             Main.hs
  hs-source-dirs:      src
  build-depends:    base >= 4,
                    text >= 1,
                    bytestring >= 0.10,
                    time >= 1.4,
                    unordered-containers >= 0.2,
                    vector >= 0.10,
                    optparse-applicative >= 0.7,
                    yaml >= 0.8

Executable jdbt-api
  ghc-options:         -threaded -rtsopts -with-rtsopts=-T -Wall
  main-is:             Api.hs
  hs-source-dirs:      src
  if flag(api)
    buildable: True
  else
    buildable: False
  build-depends:    base >= 4,
                    text >= 1,
                    bytestring >= 0.10,
                    time >= 1.4,
                    unordered-containers >= 0.2,
                    vector >= 0.10,
                    optparse-applicative >= 0.7,
                    yaml >= 0.8,
                    ekg-core,
                    ekg-statsd,
                    wai-middleware-metrics,
                    scotty >= 0.9
